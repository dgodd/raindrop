<h1>New Person</h1>
<p><%= link_to 'Back', people_path %></p>

 <% semantic_form_for @person, :html => { :multipart => true } do |form| %>
    <%= form.error_messages %>
    <% form.inputs do %>
      <%= form.input :name %>

      <%= image_tag(@person.avatar.url) if @person.avatar? %>
      <%= form.input :avatar, :as=>:file %>

      <%= form.input :body, :as=>:text %>
      <%= form.input :is_trainer, :as=>:boolean %>
      <%= form.input :trainer, :as=>:text %>
    <% end %>
    <% form.buttons do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>

